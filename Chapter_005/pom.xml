
<project>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>Chapter_005</artifactId>
	<packaging>jar</packaging>
	<version>2.0</version>
	<parent>
		<groupId>ua.ikonovalov</groupId>
		<artifactId>Java-A-to-Z</artifactId>
		<version>2.0</version>
		</parent>
	<build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>ua.ikonovalov</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>	
	